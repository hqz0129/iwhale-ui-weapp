/* pages/classify/index.wxss */

.wrap {
  background: #fff;
  height: 100%;
}

.media-cell {
  display: flex;
  justify-content: space-between;
  padding-left: 0 !important;
}

.media-cell:after {
  height: 1px;
  content: '';
  width: 100%;
  border-top: 1px solid #f0f0f0;
  position: absolute;
  bottom: -1px;
  right: 0;
  transform: scaleY(0.5);
  -webkit-transform: scaleY(0.5);
}

.media-cell-image {
  display: flex;
  align-items: center;
  padding: 0 10rpx;
}

.media-cell-image image {
  display: block;
  height: 160rpx;
  width: 160rpx;
  border-radius: 10rpx;
}

.media-cell-inner {
  position: relative;
  display: block;
  width: 100%;
  padding-top: 10rpx;
  box-sizing: border-box;
}

.media-cell-text {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.media-cell-title {
  font-size: 32rpx;
  max-width: 100%;
  color: #212121;
}

.media-cell-extra {
  color: #757575;
  font-size: 28rpx;
}

.price-content {
  display: flex;
  line-height: 50rpx;
  padding: 0 0 10rpx 0;
  width: 100%;
}

.price {
  font-size: 32rpx;
  color: #e53935;
  width: 74%;
  margin-right: 10rpx;
  text-align: left;
}
.unit{
  font-size: 24rpx;
}

/* 原价 */

.prime-cost {
  width: 50%;
  font-size: 24rpx;
  margin-right: 10rpx;
  text-decoration: line-through;
  text-align: right;
  color: #999;
}
