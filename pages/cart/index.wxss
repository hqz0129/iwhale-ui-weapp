/* pages/cart/index.wxss */

.wrap {
  background: #fff;
  height: 100%;
}

.content{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

radio{
  width: 50rpx;
  transform:scale(0.8);
}

.media-cell{
  position: relative;
  display: block;
  -ms-flex: 1;
  flex: 1;
  min-width: 0;
  width: 100%;
  padding-top: 10rpx;
  box-sizing: border-box;
}

.price-content {
  display: flex;
  line-height: 50rpx;
  padding: 0 0 10rpx 0;
  width: 100%;
}

.price {
  font-size: 32rpx;
  color: #e53935;
  width: 74%;
  margin-right: 10rpx;
  text-align: left;
}

.unit {
  font-size: 24rpx;
}

/* 原价 */

.prime-cost {
  width: 50%;
  font-size: 24rpx;
  margin-right: 10rpx;
  text-decoration: line-through;
  text-align: right;
  color: #999;
}

.submit-bar-left{
  display: flex;
  align-items: center;
}

.text-all{
  margin-left: 10rpx;
}

.submit-bar-center{
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.submit-bar-center-price{
  font-size: 35rpx;
  color: #e53935;
}