<!--index.wxml-->
<view class="weapp-add-tip">
  <view class="weapp-add-tip-text">
    <text>添加到「我的小程序」使用更方便</text>
  </view>
</view>
<iw-swiper swipers='{{swipers}}' activeColor='#7FB553' isLink></iw-swiper>
<iw-menu-tabs menus='{{menus}}' isLink></iw-menu-tabs>
<view class='goods-list'>
  <block wx:for='{{goods}}' wx:key="unique">
    <iw-goods-item thumb='{{item.thumb}}' title='{{item.title}}' price='{{item.price}}' primeCost='{{item.primeCost}}' sales='销量 {{item.sales}}' primeCostVisible footerVisible>
    <view slot='tag' class='tag'>{{item.tag}}</view>
    </iw-goods-item>
  </block>
</view>