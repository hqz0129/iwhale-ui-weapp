/* pages/mine/index.wxss */
.personal {
  width: 100%;
  height: 140rpx;
  background: #fff;
  padding: 80rpx 0;
  z-index: 2;
  position: relative;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  -moz-background-size: 100% 100%;
}

.personal-avatar {
  position: absolute;
  left: 50rpx;
  width: 130rpx;
  height: 130rpx;
  float: left;
}

.personal-avatar image {
  width: 100%;
  height: 100%;
  display: block;
  border-radius: 50%;
  border:2px solid #fff;
}

.personal-auth{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  padding-top: 20rpx;
  padding-left: 220rpx;
  font-size: 36rpx;
  width: 350rpx;
  min-height: 110rpx;
}

.personal-text {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  padding-top: 20rpx;
  padding-left: 220rpx;
  font-size: 36rpx;
  width: 350rpx;
  min-height: 110rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.personal-text .username {
  display: inline-block;
  font-weight: 500;
  font-size: 40rpx;
  word-break: break-all;
  white-space: pre-wrap;
}

.personal-text .slogan {
  display: inline-block;
  text-align: center;
  color: #757575 !important;
  font-size: 28rpx;
}

.personal-right{
  position: absolute;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #515151;
  right: 0rpx;
  top: 130rpx;
  line-height: 40rpx;
  padding: 15rpx;
  box-shadow: 0px 2rpx 10rpx rgba(0, 0, 0, .1);
  background: linear-gradient(to right, rgba(255, 255, 255, .5), rgba(255, 255, 255, .5));
  border-radius: 40rpx 0 0 40rpx;
}

.personal-right image{
  width: 40rpx;
  height: 40rpx;
  padding-right: 10rpx;
}

