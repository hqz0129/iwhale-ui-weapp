<view wx:if="{{direction === 'horizontal'}}">
  <scroll-view wx:if="{{ scroll }}" scroll-x="true" class="i-class i-tabs i-tabs-scroll {{ fixed ? 'i-tabs-fixed' : '' }}">
    <slot></slot>
  </scroll-view>
  <view wx:else class="i-class i-tabs {{ fixed ? 'i-tabs-fixed' : '' }}">
    <slot></slot>
  </view>
  <view class="{{ fixed ? 'i-tabs-fixed-height' : '' }}"></view>
</view>
<view class='' wx:if="{{direction === 'vertical'}}">
  <scroll-view wx:if="{{ scroll }}" scroll-y="true" class="i-class iw-tabs-scroll-vertical">
    <slot></slot>
  </scroll-view>
  <view wx:else class="i-class iw-tabs-scroll-vertical">
    <slot></slot>
  </view>
  <scroll-view scroll-y="true" class="iw-tabs-scroll-vertical-content">
    <view>
      <slot name='content'></slot>
    </view>
  </scroll-view>
</view>