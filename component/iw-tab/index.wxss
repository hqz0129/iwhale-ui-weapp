.i-tabs-tab {
  flex: 1;
  display: flex;
  width: 100%;
  -webkit-box-pack: center;
  justify-content: center;
  -webkit-box-align: center;
  align-items: center;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  flex-direction: column;
  text-align: center;
  position: relative;
}

.i-tabs-tab-bar {
  display: block;
  width: 60%;
  height: 8rpx;
  margin-left: 20%;
  background: 0 0;
  position: absolute;
  bottom: 0;
  left: 0;
  background: #81c784;
}

.i-tabs-tab-title {
  font-size: 32rpx;
  text-align: center;
  box-sizing: border-box;
  color: #80848f;
}

.i-tabs-tab-title-current {
  color: #000;
  font-weight: 600;
}

.i-tabs-tab-scroll {
  display: inline-block;
  width: 100rpx;
}
