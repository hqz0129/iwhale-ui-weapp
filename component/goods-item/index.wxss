/* component/goods-card/index.wxss */

.goods {
  margin-top: 30rpx;
  background: #fff;
  display: inline-block;
  width: 46%;
  border: 1px solid #ededed;
  margin-left: 18rpx;
  border-radius: 10rpx;
}

.thumb {
  border-radius: 10rpx 10rpx 0 0;
  height: 345rpx;
  width: 345rpx;
}

.goods .title {
  font-size: 32rpx;
  height: 65rpx;
  line-height: 32rpx;
  color: #333;
  margin: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  padding: 1% 5% 0 5%;
}

.price-content {
  display: flex;
  line-height: 50rpx;
  padding: 10rpx 0;
}

.price {
  font-size: 32rpx;
  padding-left: 20rpx;
  color: #E53935;
}

/* 原价 */

.prime-cost {
  width: 50%;
  font-size: 28rpx;
  margin-right: 10rpx;
  text-decoration: line-through;
  text-align: right;
  color: #999;
}

.sales {
  text-align: right;
  width: 50%;
  font-size: 28rpx;
  margin-right: 10rpx;
}

.footer-content {
  display: flex;
  line-height: 50rpx;
  color: #999;
}

.footer {
  padding-left: 20rpx;
  font-size: 28rpx;
  width: 30%;
}
