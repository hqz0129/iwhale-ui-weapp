.iw-btn {
  text-align: center;
  vertical-align: middle;
  touch-action: manipulation;
  cursor: pointer;
  background-image: none;
  white-space: nowrap;
  user-select: none;
  font-size: 14px;
  border-radius: 2px;
  border: 0 !important;
  position: relative;
  text-decoration: none;
  height: 44px;
  line-height: 44px;
  box-shadow: inset 0 0 0 1px rgba(0, 0, 0, 0.1);
  margin: 10px;
}

.iw-btn-long {
  border-radius: 0;
  margin: 0;
  box-shadow: none;
}

.iw-btn-large {
  height: 48px;
  line-height: 48px;
}

.iw-btn-small {
  height: 40px;
  line-height: 40px;
}

.iw-btn-primary {
  color: #fff !important;
  background: #118fff !important;
}

.iw-btn-ghost {
  color: #fff !important;
  background: #fff !important;
  color: #495060 !important;
}

.iw-btn-success {
  color: #fff !important;
  background: #19be6b !important;
}

.iw-btn-warning {
  color: #fff !important;
  background: #f90 !important;
}

.iw-btn-error {
  color: #fff !important;
  background: #ed3f14 !important;
}

.iw-btn-info {
  color: #fff !important;
  background: #2db7f5 !important;
}

.iw-btn-circle {
  border-radius: 44px;
}

.iw-btn-large.iw-btn-circle {
  border-radius: 48px;
}

.iw-btn-small.iw-btn-circle {
  border-radius: 40px;
}

.iw-btn-loading {
  opacity: 0.6;
}

.iw-btn-loading-inner {
  display: inline-block;
  margin-right: 12px;
  vertical-align: middle;
  width: 14px;
  height: 14px;
  background: 0 0;
  border-radius: 50%;
  border: 2px solid #fff;
  border-color: #fff #fff #fff transparent;
  animation: btn-spin 0.6s linear;
  animation-iteration-count: infinite;
}

.iw-btn-disabled {
  color: #bbbec4 !important;
  background: #f7f7f7 !important;
}

@keyframes btn-spin {
  0% {
    transform: rotate(0);
  }

  100% {
    transform: rotate(360deg);
  }
}
